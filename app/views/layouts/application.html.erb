<!DOCTYPE html>
<html>
  <head>
    <title>NewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="  sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      .photo-row { text-align: right; }

    </style>
  </head>

  <body>
      <% if logged_in? %>
                       <h5>Welcome, <%= current_user.username %></h5>&nbsp;&nbsp;
                    <%end%>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <% if current_user.present? %>
                           <li class="btn btn-primary" ><%= button_to "Log Out", logout_path, method: :delete%></li>        
                      <% else %>
                            <li  class="btn btn-primary"><%= button_to "Sign Up", '/users/new', method: :get %></li>&nbsp;&nbsp;
                            <li  class="btn btn-primary"><%= button_to "Login", '/login', method: :get %></li>   
                       <% end %> 
                    </ul>
                    <form class="d-flex">
                       <%# if current_user.role == "buyer" %>

                          <%= link_to "Cart", shops_path,class:"btn btn-primary" %>
                       <%# end %> 
                    </form>
                  
    <%= yield %>
  </body>
</html>
